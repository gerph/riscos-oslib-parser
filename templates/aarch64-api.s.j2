{% if swi.exit -%}
 {%- for reg in swi.exit %}
    // {{ '<=' if loop.first else '  ' }}  {{ register_definition(reg) }}
 {%- endfor %}
{%- endif %}

{#- Entry sequence #}
    STP     x29, x30, [sp, #-16]!

{%- if exitregs %}
// Prepare output registers
{#- Prepare output registers #}
    SUB     sp, sp, #{{ (((exitregs|length) + 1) // 2) * 16 }}
 {%- for outreg, reg in swi.outregs().items()|sort %}
    STR     x{{outreg}}, [sp, #{{ 8 * loop.index0}}]
 {%- endfor %}
