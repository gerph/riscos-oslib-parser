{# SWI input registers -#}
 {%- for inreg, regset in swi.inregs().items()|sort|reverse -%}
  {%- for reg in regset -%}
   {{ asm_regvalue_for_reg(defmod, reg, inreg) }}
  {%- endfor -%}
 {%- endfor -%}
