 {%- if reg.name and reg.reg.startswith('R') -%}
  {{ ns.exitregs.append(reg) or '' }}
 {%- endif -%}
{%- endfor -%}
{%- set exitregs = ns.exitregs -%}


{#- Register definition #}
{%- if swi.entry %}
 {%- for reg in swi.entry %}
